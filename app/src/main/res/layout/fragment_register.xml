<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.hustmatching.viewmodel.RegisterFragViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.RegisterFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HUST matcher"
                android:textColor="#F1A100"
                android:textSize="35sp"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="30dp" />

            <TextView
                android:id="@+id/login_line"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:background="#F1A100"
                android:layout_below="@id/login_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />
            
            <com.example.hustmatching.view.EmailEditText
                android:id="@+id/email_bar"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                app:barText="@={viewModel.email}"/>

            <com.example.hustmatching.view.AuthenticationEditText
                android:id="@+id/authens_bar"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                app:barText="@={viewModel.authen}"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/authens_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/rec_bg_3"
                android:text="注册"
                android:textColor="#F1A100"
                android:textSize="20sp" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/des1"
                android:text="@string/register_description2"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/des1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/register_description1"
                android:textSize="12sp"
                android:layout_margin="10dp"/>
        </RelativeLayout>


    </FrameLayout>
</layout>